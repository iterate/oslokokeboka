generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// prolly need visible flag or something
model RecipeSubmission {
  id        String          @id @default(uuid())
  fields    RecipeField[]
  completed Boolean         @default(false)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  state     SubmissionState @default(STARTED)
}

model RecipeField {
  id                 Int               @id @default(autoincrement())
  index              String
  step               Int
  name               String
  inputType          InputType
  inputValue         String
  RecipeSubmission   RecipeSubmission? @relation(fields: [recipeSubmissionId], references: [id])
  recipeSubmissionId String?
}

enum InputType {
  TEXT
  TEXTAREA
  DROPDOWN
  ADDER
  CONSENT
}

enum SubmissionState {
  STARTED
  COMPLETED
  APPROVED
}
