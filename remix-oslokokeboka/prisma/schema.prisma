// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// prolly need visible flag or something
model RecipeSubmission {
  id          String          @id @default(uuid())
  fields      RecipeField[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  state       SubmissionState @default(STARTED)
  RecipeImage RecipeImage[]
}

model RecipeField {
  id                 Int               @id @default(autoincrement())
  index              String
  step               Int
  name               String
  inputType          InputType
  inputValue         String
  RecipeSubmission   RecipeSubmission? @relation(fields: [recipeSubmissionId], references: [id])
  recipeSubmissionId String?
}

model RecipeImage {
  id                 String            @id @default(uuid())
  url                String            @unique
  default            Boolean           @default(false)
  RecipeSubmission   RecipeSubmission? @relation(fields: [recipeSubmissionId], references: [id])
  recipeSubmissionId String?
}

enum InputType {
  TEXT
  TEXTAREA
  DROPDOWN
  ADDER
  CONSENT
  IMAGE
}

enum SubmissionState {
  STARTED
  COMPLETED
  PROCESSED
  SOFT_DELETE
}
